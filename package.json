{
  "name": "maos-do-amanha",
  "version": "1.0.0",
  "description": "Plataforma web da ONG Mãos do Amanhã — voluntariado, doações e projetos sociais.",
  "main": "index.html",
  "scripts": {
    "start": "live-server",
    "build": "npm run minify-css && npm run minify-html",
    "minify-css": "cleancss -O2 -o dist/assets/css/style.css assets/css/style.css",
    "minify-html": "html-minifier-terser --collapse-whitespace --remove-comments --minify-css true --minify-js true -o dist/index.html index.html"
  },
  "author": "José Werberson Ferreira",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "clean-css-cli": "^5.6.3",
    "html-minifier-terser": "^7.2.0",
    "live-server": "^1.2.2"
  }
}
